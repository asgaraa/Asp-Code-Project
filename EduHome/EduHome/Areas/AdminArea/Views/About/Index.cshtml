@model About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Service</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="About" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">


                            <img style="width:250px; height:250px;" src="~/Assets/img/about/@Model.Image" alt="Alternate Text" />
                            <span style="display:block">Header:</span>
                            <h6 style="color:black">@Model.Header</h6>
                            <span>HeaderDesc:</span>
                            <h6 style="color:blue">@Model.HeadDesc</h6>
                            <span>Description:</span>
                            <h6 style="color:red">@Model.Description </h6>
                            <span>Description Second:</span>
                            <h6 style="color:hotpink">@Model.DescriptSecond</h6>







                            <a class="btn btn-inverse-warning btn-sm" asp-action="Edit" asp-route-Id="@Model.Id"><i class="mdi mdi-grease-pencil"></i></a>








                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


