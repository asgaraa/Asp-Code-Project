@model EventVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <form class="forms-sample mt-5" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo">Event Image:</label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="DPhoto">Event Image:</label>
            <input class="form-control" style="width:300px" asp-for="DPhoto">
            <span class="text-danger" asp-validation-for="DPhoto"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Date:</label>
            <input class="form-control" style="width:300px" asp-for="Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desc">Desc:</label>
            <input class="form-control" style="width:300px" asp-for="Desc">
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header">Header:</label>
            <input class="form-control" style="width:300px" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time">Time:</label>
            <input class="form-control" style="width:300px" asp-for="Time">
            <span class="text-danger" asp-validation-for="Time"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location">Location:</label>
            <input class="form-control" style="width:300px" asp-for="Location">
            <span class="text-danger" asp-validation-for="Location"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name">Detail Nameme:</label>
            <input class="form-control" style="width:300px" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desc">Desc:</label>
            <input class="form-control" style="width:300px" asp-for="Desc">
            <span class="text-danger" asp-validation-for="Desc"></span>
        </div>


        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>


