@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="header d-flex justify-content-between my-5">
                        <h1 class="card-title my-3">Service</h1>
                        <div><a class="btn btn-success btn-sm my-4" asp-controller="Service" asp-action="Create">Create</a></div>




                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th> Number </th>
                                    <th> Header </th>
                                    <th> Desc </th>
                                    <th> Setting </th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var service in Model)
                                {
                                <tr>
                                    <td> @count </td>
                                    <td> @service.Header  </td>
                                    <td>@service.Desc  </td>
                                    
                                    <td>
                                        <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-Id="@service.Id"><i class="mdi mdi-account-card-details"></i></a>
                                        <a class="btn btn-inverse-warning btn-sm" asp-action="Edit" asp-route-Id="@service.Id"><i class="mdi mdi-grease-pencil"></i></a>
                                        <form style="display:inline;" asp-action="Delete" asp-route-Id="@service.Id">
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="mdi mdi-delete-forever"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                    count++;
                                }




                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

