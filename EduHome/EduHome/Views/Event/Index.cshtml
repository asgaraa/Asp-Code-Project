@model List<Event>
    <!-- Banner Area Start -->
    <div class="banner-area-wrapper">
        <div class="banner-area text-center">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="banner-content-wrapper">
                            <div class="banner-content">
                                <h2>event</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Event Start -->
    <div class="event-area three text-center pt-150 pb-150">
        <div class="container">
            <div class="row">
                @foreach (var event1 in Model)
                {
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-event mb-60">
            <div class="event-img">
                <a asp-controller="Event" asp-action="Detail" asp-route-Id="@event1.Id">
                    <img src="~/assets/img/event/@event1.Image" alt="event">
                    <div class="course-hover">
                        <i class="fa fa-link"></i>
                    </div>
                </a>
                <div class="event-date">
                    <h3>@event1.Date</h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a asp-controller="Event" asp-action="Detail" asp-route-Id="@event1.Id">@event1.EventsDetail.Name</a></h4>
                <ul>
                    <li><span>time:</span> @event1.Time</li>
                    <li><span>venue</span> @event1.Location</li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-Id="@event1.Id">join now</a>
                </div>
            </div>
        </div>
    </div>      }

            </div>
        </div>
    </div>
    <!-- Event End -->
