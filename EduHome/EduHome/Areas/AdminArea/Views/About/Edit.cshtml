@model About
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="img">
        <img src="~/Assets/img/about/@Model.Image" alt="About" style="width:350px; height:350px" />
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input class="form-control" style="width:300px" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header">Header:</label>
            <input class="form-control" style="width:300px" asp-for="Header">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="HeadDesc">HeadDesc:</label>
            <input class="form-control" style="width:300px" asp-for="HeadDesc">
            <span class="text-danger" asp-validation-for="HeadDesc"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description:</label>
            <input class="form-control" style="width:300px" asp-for="Description">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="DescriptSecond">DEscription Second:</label>
            <input class="form-control" style="width:300px" asp-for="DescriptSecond">
            <span class="text-danger" asp-validation-for="DescriptSecond"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>